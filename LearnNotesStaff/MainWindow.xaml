<Window x:Class="LearnNotesStaff.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LearnNotesStaff"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock x:Name="NoteDisplay" Text="Press any key to start" FontSize="30" Margin="20" />
            <TextBlock x:Name="StatusDisplay" Text="Waiting..." FontSize="20" Foreground="Gray" />
            <Border x:Name="NoteImagePlaceHolder" Width="200" Height="100" Background="LightGray" Margin="20">
                <Canvas x:Name="StaffCanvas" Background="White" Loaded="StaffCanvas_Loaded"></Canvas>
            </Border>
        </StackPanel>
    </Grid>
</Window>